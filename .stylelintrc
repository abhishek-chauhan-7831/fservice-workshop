{
  "extends": "stylelint-config-standard",
  "rules": {
    "max-nesting-depth": 4,
    "number-leading-zero": "never",
    "no-descending-specificity": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "return",
          "for",
          "extend",
          "else",
          "else if"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "node_modules/",
    "app/styles/fonticons/_glyphs.scss",
    "**/*.js"
  ]
}